<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="AlarmeDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@null</item><!-- 自己想要的背景-->
        <item name="android:windowIsTranslucent">true</item><!-- 半透明-->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上-->
        <item name="android:windowNoTitle">false</item><!-- 没有标题-->

    </style>
    <style name="AlarmeDialogText">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AlarmeDialogText.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
